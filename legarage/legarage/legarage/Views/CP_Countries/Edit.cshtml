@model legarage.Models.CountriesModel

    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@Resources.CP_Countries.Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<div class="modal-body">
    <form id="EditForm">
        <div class="form-group">
            <input hidden type="text" id="CountryId" name="CountryId" value="@Model.ID" />
            <label for="country"><span style="color:red;">*</span>@Resources.CP_Countries.Country</label>
            <input type="text" class="form-control" id="country" value="@Model.Name" name="Country" placeholder="@Resources.CP_Countries.EnterCountry" disabled>
        </div>
        <div class="form-group">
            <label for="code"><span style="color:red;">*</span>@Resources.CP_Countries.Code</label>
            <input type="text" class="form-control" id="code" value="@Model.Code" name="Code" placeholder="@Resources.CP_Countries.EnterCode" disabled>
        </div>
        <div class="form-group">
            <label for="is_market"><span style="color:red;">*</span>@Resources.CP_Countries.IsMarket</label>
            <select name="is_market" id="is_market" class="form-control">

                @{
                    if (Model.IsMarket == 1)
                    {
                        <option value="1">@Resources.CP_Countries.Yes</option>
                        <option value="0">@Resources.CP_Countries.No</option>
                    }
                    else
                    {
                        <option value="0">@Resources.CP_Countries.No</option>
                        <option value="1">@Resources.CP_Countries.Yes</option>
                    }
                }

            </select>
            <div class="form-group">
                <label for="is_factory"><span style="color:red;">*</span>@Resources.CP_Countries.IsFactory</label>
                <select name="is_factory" id="is_factory" class="form-control" required>
                    @{
                        if (Model.IsFactory == 1)
                        {
                            <option value="1">@Resources.CP_Countries.Yes</option>
                            <option value="0">@Resources.CP_Countries.No</option>
                        }
                        else
                        {
                            <option value="0">@Resources.CP_Countries.No</option>
                            <option value="1">@Resources.CP_Countries.Yes</option>
                        }
                    }
                </select>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Countries.Close</button>
    <button type="button" class="btn btn-primary" onclick="Update('@Model.URL.Edit','@Model.URL.Refresh')">@Resources.CP_Countries.Edit</button>
</div>