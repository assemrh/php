                Countries = legarage.Classes.Database.ReadTable("Countries ", " order by name ", null, out msg);

            }
            <label for="country"><span style="color:red;">*</span>@Resources.CP.Country</label>
            <select class="form-control" id="country" name="country">
                <option value="-1">@Resources.CP.Chose @Resources.CP.Country
                <img src="~/Images/partners/WhatsApp Image 2021-02-14 at 11.49.36.jpeg"/>
                </option>
                @*{
                    if (Countries != null && Countries.Rows.Count != 0)
                    {
                        foreach (DataRow Country in Countries.Rows)
                        {
                            <option value="@Country["id"].ToString()">@Country["name"].ToString()</option>
                        }
                    }
                }*@
            </select>
        </div>

        @*<div class="form-group" hidden>
            <label for="country"><span style="color:red;">*</span>@Resources.CP_Countries.Country</label>
            <input type="text" class="form-control" id="country" name="country" placeholder="@Resources.CP_Countries.EnterCountry">
        </div>*@
        @*<div class="form-group" hidden>
