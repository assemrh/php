            <input type="text" class="form-control" id="code" name="code" placeholder="@Resources.CP_Countries.EnterCode">
        </div>*@
        <div class="form-group">
            <label for="is_market"><span style="color:red;">*</span>@Resources.CP_Countries.IsMarket</label>
            <select name="is_market" id="is_market" class="form-control">
                <option value="-1">@Resources.CP_Countries.IsMarket
                </option>

                <option value="1">@Resources.CP_Countries.Yes</option>
                <option value="0">@Resources.CP_Countries.No</option>
            </select>
        </div> 
        <div class="form-group">
            <label for="is_factory"><span style="color:red;">*</span>@Resources.CP_Countries.IsFactory</label>
            <select name="is_factory" id="is_factory" class="form-control">
                <option value="-1">@Resources.CP_Countries.IsFactory</option>
                <option value="1">@Resources.CP_Countries.Yes</option>
                <option value="0">@Resources.CP_Countries.No</option>
            </select>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Countries.Close</button>
    <button type="submit" class="btn btn-primary" id="myBtn" onclick="return Adding('@Model.Adding','@Model.Refresh');">@Resources.CP_Countries.Add</button>
</div>
