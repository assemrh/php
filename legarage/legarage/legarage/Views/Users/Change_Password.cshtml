
@{
    ViewBag.Title = Resources.Users.chng_password;
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="container mt-5">


    @{
        string strError = @Session["error"] != null ? @Session["error"].ToString() : "";
        Session["error"] = null;

    }

    @if (strError != string.Empty)
    {
        <span class="alert-info text-center">
            @strError;
        </span>
    }
    <div style="padding: 20px;">

        <div class="row">
            <div class="col-4 col-md-5 col-lg-4 col-md-offset-6 ml-auto mr-auto">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">@Resources.Users.chng_password?</h2>
                            <p>@Resources.Users.lbl_chng_password</p>
                            <div class="panel-body">

                                <form id="cng_psswrd_frm" class="form" action="@Url.Action("change_password", "Users")" method="post" autocomplete="off">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                <input class="form-control" placeholder="@Resources.Users.oldPassword" autofocus type="password"  pattern=".{4,32}"  title="4 character password" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input class="form-control" name="new-password" autocomplete="new-password" placeholder="@Resources.Users.newPassword" type="password" pattern=".{8,32}" title="8 character password" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input class="form-control" name="conf-password" autocomplete="off"  placeholder="@Resources.Users.confirmnewpassword" pattern=".{8,32}" title="@Resources.Users.valid_character"  type="password" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block" value="@Resources.Users.SendMyPassword" type="submit" >
                                        </div>
                                    </fieldset>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function changeBackCol() {
        $('#resetpassB').css('background-color', '#407088');
    }
    function backToDefCol() {
        $('#resetpassB').css('background-color', '#00474f');
    }
    function resetMessage() {
        if ($('#exampleDropdownFormEmailR').val()) {
            alert('Reseting password sent to your email address.');
        } else {
            alert('Email Cannot Be Empty');
        }
    }


</script>
