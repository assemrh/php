@model legarage.Models.CountriesModel

<div class="modal-header">
    <h5 class="modal-title">@Resources.CP_Countries.Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <input hidden type="text" value="@Model.ID" />
    <div class="form-group">
        <label for="country">@Resources.CP_Countries.Country</label>
        <input disabled type="text" class="form-control" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="code">@Resources.CP_Countries.Code</label>
        <input disabled type="text" class="form-control" value="@Model.Code">
    </div>
    <div class="form-group">
        @{
            string x = Model.IsMarket == 0 ? "No" : "Yes";
        }
        <label for="code">@Resources.CP_Countries.IsMarket</label>
        <input disabled type="text" class="form-control" value='@x'>
    </div>
    <div class="form-group">
        @{
            string y = Model.IsFactory == 0 ? "No" : "Yes";
        }
        <label for="code">@Resources.CP_Countries.IsMarket</label>
        <input disabled type="text" class="form-control" value='@y'>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Countries.Close</button>
</div>
