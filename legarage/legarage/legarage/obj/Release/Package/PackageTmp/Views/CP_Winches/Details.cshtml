@model legarage.Models.WinchesModel
@using legarage.Models;

<div class="modal-header">
    <h5 class="modal-title">@Resources.CP_Winches.Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <input hidden value="@Model.ID" />
    <div class="form-group">
        <label>@Resources.CP_Winches.Title</label>
        <input disabled type="text" class="form-control" value="@Model.Title">
    </div>
    @{
        if (Session["Is_Admin"] == null || Session["Is_Admin"].ToString() == "1")
        {
            <div class="form-group">
                <label>@Resources.CP_Winches.OwnerName</label>
                <input disabled type="text" class="form-control" value="@Model.User.UserName">
            </div>
        }
    }
    <div class="form-group">
        <label>@Resources.CP_Winches.Address</label>
        <input disabled type="text" class="form-control" value="@Model.Address.AddressName">
    </div>
    <div class="form-group">
        <label>@Resources.CP_Winches.Phone</label>
        <input disabled type="text" class="form-control" value="@Model.Mobile">
    </div>
    <div class="form-group">
        <label>@Resources.CP_Winches.Whatsapp</label>
        <input disabled type="text" class="form-control" value="@Model.Whatsapp">
    </div>
    <div class="form-group">
        <label for="DriverName">@Resources.CP_Winches.DriverName</label>
        <input disabled type="text" class="form-control" value="@Model.DriverName">
    </div>
    <div class="form-group">
        <label for="DriverPhone">@Resources.CP_Winches.DriverPhone</label>
        <input disabled type="text" class="form-control" value="@Model.DriverPhone">
    </div>
    <div class="form-group">
        <label for="VehicleSizes">@Resources.CP_Winches.VehicleSizes</label>
        <input disabled type="text" class="form-control" value="@Model.VehicleSize">
    </div>
    <div class="form-group">
        <label for="Area">@Resources.CP_Winches.Area</label>
        <input disabled type="text" class="form-control" value="@Model.Area">
    </div>
    <div class="form-group">
        <label>@Resources.CP_Winches.Keywords</label>
        <textarea disabled type="text" class="form-control" rows="2">@Model.Keywords</textarea>
    </div>
    <div class="form-group">
        <label>@Resources.CP_Winches.Descrption</label>
        <textarea disabled type="text" class="form-control" rows="4">@Model.Description</textarea>
    </div>
</div>
<div class="form-group text-center">
    <h3>@Resources.CP_Winches.Image</h3>
    <img class="rounded w-50" src="~/Images/Winches/@Model.Image.URL" />
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Winches.Close</button>
</div>