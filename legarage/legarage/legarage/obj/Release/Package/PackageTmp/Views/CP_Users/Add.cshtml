@using System.Data;
@model legarage.Models.URLModel

<div class="modal-header">
    <h5 class="modal-title">@Resources.CP_Users.Add</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="AddForm">
        <div class="form-group">
            <label><span style="color:red;">*</span>@Resources.CP_Users.Name</label>
            <input type="text" class="form-control" id="fullname" name="fullname" placeholder="@Resources.CP_Users.EnterName">
        </div>
        <div class="form-group">
            <label><span style="color:red;">*</span>@Resources.CP_Users.Username</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="@Resources.CP_Users.EnterUsername">
        </div>
        <div class="form-group">
            <label><span style="color:red;">*</span>@Resources.CP_Users.Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="@Resources.CP_Users.EnterEmail">
        </div>
        <div class="form-group">
            <label for="garpassnew"><span style="color:red;">*</span>@Resources.CP_Users.Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="@Resources.CP_Users.EnterPassword">
        </div>
        <div class="form-group">
            <label for="country"><span style="color:red;">*</span>@Resources.CP_Users.Country</label>
            <select name="country" id="country" onchange="Get_Options('city', 'country', '/Home/GetCities/')" class="form-control">
                <option id="Select_Countries" value="-1">Select Country </option>
            </select>
        </div>
        <div class="form-group">
            <label for="country"><span style="color:red;">*</span>@Resources.CP_Users.City</label>
            <select name="city" id="city" class="form-control">
                <option value="-1">@Resources.CP_Users.ChoseCountryFirstly</option>
            </select>
        </div>
        <div class="form-group">
            <label for="garaddress"><span style="color:red;">*</span>@Resources.CP_Users.Address</label>
            <input type="text" class="form-control" id="address" placeholder="@Resources.CP_Users.EnterAddress" name="address">
        </div>
        <div class="form-group">
            <label><span style="color:red;">*</span>@Resources.CP_Users.Phone</label>
            <div class="form-control mr-0 p-0 " id="phone_picker">
                <div class="form-control mr-0 p-0">
                    <div class="dropdown m-0 w-100">
                        <button class="btn dropdown-toggle form-control countrycodeRegSel border-0 w-auto " type="button" id="phone_keyMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:unset; position:absolute; ">
                            <img src="https://www.countryflags.io/tr/shiny/24.png">
                        </button>
                        <div class="dropdown-menu select-country" id="phone_keys" aria-labelledby="dropdownMenuButton">
                        </div><input id="phone_key" type="hidden" name="phone_key" value="90" />
                        <input type="tel" class="form-control border-0" id="phonenumber" placeholder="&nbsp;&nbsp;&nbsp;@Resources.Shared.PhoneNumber" required name="phoneno" style="padding-left:4rem!important; display: inline-block; background-color:unset;">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label><span style="color:red;">*</span>@Resources.CP_Users.WhatsApp</label>
            <input type="text" class="form-control" id="whatsapp" placeholder="@Resources.CP_Users.EnterWhatsApp" name="whatsapp">
        </div>
        <div class="form-group">
            <label>@Resources.CP_Users.Fax</label>
            <input type="text" class="form-control" id="fax" placeholder="@Resources.CP_Users.EnterFax" name="fax">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Website</label>
            <input type="url" class="form-control" id="website" placeholder="@Resources.CP_Users.EnterWebsite" name="site">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Facebook</label>
            <input type="text" class="form-control" id="facebook" placeholder="@Resources.CP_Users.EnterFacebook" name="facebook">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Twitter</label>
            <input type="text" class="form-control" id="twitter" placeholder="@Resources.CP_Users.EnterTwitter" name="twitter">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Instagram</label>
            <input type="text" class="form-control" id="instagram" placeholder="@Resources.CP_Users.EnterInstagram" name="instagram">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Youtube</label>
            <input type="text" class="form-control" id="youtube" placeholder="@Resources.CP_Users.EnterYoutube" name="youtube">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Linkedin</label>
            <input type="text" class="form-control" id="linkedin" placeholder="@Resources.CP_Users.EnterLinkedin" name="linkedin">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Snapchat</label>
            <input type="text" class="form-control" id="snapchat" placeholder="@Resources.CP_Users.EnterSnapchat" name="snapchat">
        </div>
        <div class="form-group">
            <label for="garbrands">@Resources.CP_Users.Tiktok</label>
            <input type="text" class="form-control" id="tiktok" placeholder="@Resources.CP_Users.EnterTiktok" name="tiktok">
        </div>
        <div class="form-group">
            <label for="descriptiontextarea"><span style="color:red;">*</span>@Resources.CP_Users.Descrption</label>
            <textarea class="form-control" id="descriptiontextarea" rows="4" placeholder="@Resources.CP_Users.EnterDescrption" name="desc"></textarea>
        </div>
    </form>
    <div class="form-group">
        <label><span style="color:red;">*</span>@Resources.CP_Users.Img</label>
        <form action="/Home/DropAttachmentsSingle/" Class="dropzone" id="dropzone"></form>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Users.Close</button>
    <button type="submit" class="btn btn-primary" id="myBtn" onclick="return Adding('@Model.Adding','@Model.Refresh');">@Resources.CP_Users.Add</button>
</div>
