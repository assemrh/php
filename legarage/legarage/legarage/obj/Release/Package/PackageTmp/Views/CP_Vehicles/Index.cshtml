@model legarage.Models.URLModel
@{
    Layout = "~/Views/Shared/_LayoutCP.cshtml";
    ViewBag.Title = Resources.CP_Vehicles.Vehicles;
}

<div class="content col-12 text-center rounded-bottom" style="background-color: lightgrey;">
    <div class="container">
        <div class="col-12 h3">
            <div class="row plusandrefresh pt-2">
                <div class="col-7"><h3>@Resources.CP_Vehicles.Vehicles</h3></div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="@Resources.Shared.searchBoxlbl" onkeyup="search_boxes(this.value, 'vehicle-row','table-row')">
                </div>
                <div class="col-1">
                    <i title="@Resources.CP_Vehicles.Refresh" onclick="Refresh('@Model.Refresh');" style="color: green; cursor: pointer;" class="fas fa-redo-alt refreshControlPanel text-left"></i>
                </div>
                <div class="col-1">
                    <i title="@Resources.CP_Vehicles.Add" style="color: lightsalmon; cursor: pointer;" class="fas fa-plus-circle plusControlPanel" data-toggle="modal" data-target="#Modal" onclick="Add('@Model.Add', 'Market')"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Resources.CP_Vehicles.Title</th>
            <th scope="col">@Resources.CP_Vehicles.IsNew</th>
            <th scope="col">@Resources.CP_Vehicles.Color</th>
            <th scope="col">@Resources.CP_Vehicles.EngineSize</th>
            <th scope="col">@Resources.CP_Vehicles.FuelType</th>
            <th scope="col">@Resources.CP_Vehicles.Gearbox</th>
            <th scope="col">@Resources.CP_Vehicles.Mieage</th>
            <th scope="col">@Resources.CP_Vehicles.Year</th>
            <th scope="col">@Resources.CP_Vehicles.Model</th>
            <th scope="col">@Resources.CP_Vehicles.VehicleType</th>
            <th scope="col">@Resources.CP_Vehicles.Price</th>
            <th scope="col">@Resources.CP_Vehicles.Tools</th>
        </tr>
    </thead>
    <tbody id="Table">
        <tr colspan="13">
            <td colspan="13" class="w-25 text-center"><span class="ml-auto mr-auto ">@Resources.Shared.Loading</span></td>
        </tr>
        <tr colspan="13">
            <td colspan="13" class="w-25 text-center border-0">
                <span class="ml-auto mr-auto ">
                    <img src="~/Images/loader.gif" />
                </span>
            </td>
        </tr>
</table>

<script>
    $(document).ready(function () {
        Refresh('@Model.Refresh');
    });
</script>
