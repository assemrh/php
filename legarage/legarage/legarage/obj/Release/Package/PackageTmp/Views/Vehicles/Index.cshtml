                <select name="years" class="form-control mr-sm-2" placeholder="@Resources.Vehicles.Year" id="year">
                    <option value="select">@Resources.Vehicles.SelectYear</option>
                    @{
                        for (int i = DateTime.Now.Year; i >= 1960; i--)
