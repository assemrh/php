                    <option value="select">@Resources.Vehicles.Select Miles/KM ran</option>
                    @{

                        int[] kms = new int[] { 50, 100, 150, 200 };
                        double mi;
                        int j = 0;
                        foreach (var km in kms)
                        {
                            mi = km * 0.62137;
                            <option value="@j++">Up to @km KM ( @mi M)   </option>
                        }
                    }
