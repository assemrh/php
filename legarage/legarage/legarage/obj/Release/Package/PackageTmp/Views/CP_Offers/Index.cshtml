@{
    Layout = "~/Views/Shared/_LayoutCP.cshtml";
    ViewBag.Title = Resources.CP.Offers;
}
@model legarage.Models.URLModel

<div class="content col-12 text-center rounded-bottom" style="background-color: lightgrey;">
    <div class="container">
        <div class="col-12 h3">
            <div class="row plusandrefresh pt-2">
                <div class="col-7"><h3>@Resources.CP.Offers</h3></div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="@Resources.Shared.searchBoxlbl" onkeyup="search_boxes(this.value, 'offer-row','table-row')">
                </div>
                <div class="col-1">
                    <i title="@Resources.CP.Refresh" onclick="Refresh('@Model.Refresh');" style="color: green; cursor: pointer;" class="fas fa-redo-alt refreshControlPanel text-left"></i>
                </div>
                <div class="col-1">
                    <i title="@Resources.CP.CreateNew" style="color: lightsalmon; cursor: pointer;" class="fas fa-plus-circle plusControlPanel" data-toggle="modal" data-target="#Modal" onclick="Add('@Model.Add')"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Resources.CP.Full_Name</th>
            <th scope="col">@Resources.CP.By</th>
            <th scope="col">@Resources.CP.By</th>
            <th scope="col">@Resources.CP.Price</th>
            <th scope="col">@Resources.CP.Start</th>
            <th scope="col">@Resources.CP.End</th>
            <th scope="col">@Resources.CP.Tools</th>
        </tr>
    </thead>
    <tbody id="Table">
        <tr colspan="8">
            <td colspan="8" class="w-25 text-center"><span class="ml-auto mr-auto ">@Resources.Shared.Loading</span></td>
        </tr>
        <tr colspan="8">
            <td colspan="8" class="w-25 text-center border-0">
                <span class="ml-auto mr-auto ">
                    <img src="~/Images/loader.gif" />
                </span>
            </td>
        </tr>
</table>

<script>
    $(document).ready(function () {
        Refresh('@Model.Refresh');
    });
</script>

<script src="~/Scripts/offers.js">
</script>




