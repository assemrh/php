@model legarage.Models.BrandsModel

<div class="modal-header">
    <h5 class="modal-title">@Resources.CP_Brands.Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-group">
        <label for="country">@Resources.CP_Brands.Brand</label>
        <input disabled type="text" class="form-control" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="country">@Resources.CP_Brands.Country</label>
        <input disabled type="text" class="form-control" value="@Model.CountryName">
    </div>
        <label for="country">@Resources.CP_Brands.Logo</label>
    <div class="form-group text-center">
        <img class="rounded w-50" src="~/Images/Brands/@Model.Image.URL" />
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.CP_Brands.Close</button>
</div>