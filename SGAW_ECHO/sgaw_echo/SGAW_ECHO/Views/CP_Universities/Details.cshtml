@model SGAW_ECHO.Models.UserModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">User Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <form>
        <div class="modal-body">
            <input hidden value="@Model.ID" />
            <div class="form-group">
                <label>Full Name</label>
                <input disabled type="text" class="form-control" value="@Model.FullName" name="type_name">
            </div>
            <div class="form-group">
                <label>Username</label>
                <input disabled type="text" class="form-control" value="@Model.UserName" name="type_name">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input disabled type="text" class="form-control" value="@Model.Address">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input disabled type="text" class="form-control" value="@Model.Email" name="type_name">
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input disabled type="text" class="form-control" value="@Model.Phone" name="type_name">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input disabled type="text" class="form-control" value="@Model.Password" name="type_name">
            </div>            
            <div class="form-group">
                <label>Bio</label>
                <input disabled type="text" class="form-control" value="@Model.Bio" name="type_name">
            </div>
        </div>
        <div class="form-group text-center">
            <h3>User Image</h3>
            <img class="rounded w-50" src="~/Images/Users/Model.Image.URL" />
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>
